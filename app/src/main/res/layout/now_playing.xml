<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicalstructure.NowPlaying">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/above_and_beyond_we_are_all_we_need"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistName"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:layout_gravity="center"
        android:text="Above &amp; Beyond feat. Zoe Johnston"
        tools:text="Above &amp; Beyond feat. Zoe Johnston"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trackTitle"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:text="We're All We Need"
        tools:text="We're All We Need"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center_vertical"
            android:id="@+id/previousButton"
            android:src="@drawable/previous_button"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playButton"
            android:src="@drawable/play_button"/>

        <ImageView
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center_vertical"
            android:id="@+id/stopButton"
            android:src="@drawable/stop_button"/>

        <ImageView
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center_vertical"
            android:id="@+id/nextButton"
            android:src="@drawable/next_button"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicLibraryTextView"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:text="Music Library"/>

</LinearLayout>
