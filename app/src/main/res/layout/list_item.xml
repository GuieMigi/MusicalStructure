<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/leftRightPadding">

    <ImageView
        android:id="@+id/albumCoverImageView"
        android:layout_width="@dimen/musicLibraryImageViewSize"
        android:layout_height="@dimen/musicLibraryImageViewSize"
        android:contentDescription="@string/albumCoverTrackDetails"
        tools:src="@drawable/armin_van_buuren_blue_fear" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/leftRightPadding"
        android:paddingLeft="@dimen/leftRightPadding"
        android:paddingRight="@dimen/leftRightPadding"
        android:paddingStart="@dimen/leftRightPadding">

        <TextView
            android:id="@+id/artistNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Armin van Buuren" />

        <TextView
            android:id="@+id/trackTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Blue Fear" />

    </LinearLayout>

</LinearLayout>